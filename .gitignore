# Create .gitignore if not exists
cat > .gitignore << 'EOF'
# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
venv/
env/
.env
.venv

# Django
*.log
local_settings.py
db.sqlite3
db.sqlite3-journal

# Static files
staticfiles/

# Media files
media/

# OS
.DS_Store
Thumbs.db

# IDE
.vscode/
.idea/
*.swp
*.swo

# Environment variables
.env
.env.local

# Database backups
*.dump
*.sql
EOF

# Add .gitignore
git add .gitignore